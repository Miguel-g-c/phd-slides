<panzoom-figure
  class="flex items-center justify-center overflow-hidden max-h-[60vh]"
>
  <slot />
</panzoom-figure>

<script>
  import Panzoom from "panzoom";

  class PanzoomFigure extends HTMLElement {
    constructor() {
      super();
      const fig = this.querySelector("svg");
      Panzoom(fig, {
        filterKey: () => true,
      });
    }
  }

  customElements.define("panzoom-figure", PanzoomFigure);
</script>
